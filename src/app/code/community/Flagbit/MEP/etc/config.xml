<?xml version="1.0"?>
<config>
    <modules>
        <Flagbit_MEP>
            <version>0.1.2</version>
        </Flagbit_MEP>
    </modules>
    
    <global>
        <blocks>
            <mep>
                <class>Flagbit_MEP_Block</class>
            </mep>
        </blocks>

        <helpers>
            <mep>
                <class>Flagbit_MEP_Helper</class>
            </mep>
        </helpers>
        <models>
            <mep>
                <class>Flagbit_MEP_Model</class>
                <resourceModel>mep_mysql4</resourceModel>
            </mep>

            <mep_mysql4>
                <class>Flagbit_MEP_Model_Mysql4</class>
                <entities>
                    <profil>
                        <table>mep_profile</table>
                    </profil>
                    <mapping>
                        <table>mep_profile_attribute</table>
                    </mapping>
                </entities>
            </mep_mysql4>
        </models>

        <resources>
            <mep_setup>
                <setup>
                    <module>Flagbit_MEP</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mep_setup>
            <mep_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mep_write>
            <mep_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mep_read>
        </resources>
    </global>



    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <mep before="Mage_Adminhtml">Flagbit_MEP_Adminhtml</mep>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <mep>
                    <file>mep.xml</file>
                </mep>
            </updates>
        </layout>
    </adminhtml>

</config>
